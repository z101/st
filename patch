#!/bin/rc

maxpnum=''
while(! ~ $1 ''){
	switch($1){
	case [0-9] [1-9][0-9]
		maxpnum=$1
	}
	shift
}
echo param: max patch num '=' $maxpnum
patches=`{eval ls -1b | sort | grep 'patch\.[0-9][0-9]\.*' | head -$maxpnum}
for(f in $patches){
	echo ' -' applying $f...
	if(! patch -p1 < $f){
		echo [ERROR] patch "$f" failed
		exit 1
	}
}
